<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                               http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0"
         metadata-complete="true">

    <listener>
        <listener-class>qingzhou.console.controller.SystemController</listener-class>
    </listener>

    <filter>
        <filter-name>SystemController</filter-name>
        <filter-class>qingzhou.console.controller.SystemController</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SystemController</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>RESTController</servlet-name>
        <servlet-class>qingzhou.console.controller.RESTController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RESTController</servlet-name>
        <url-pattern>/rest/*</url-pattern>
    </servlet-mapping>

    <error-page>
        <error-code>400</error-code>
        <location>/WEB-INF/page/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/WEB-INF/page/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/page/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/page/error.jsp</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/WEB-INF/page/error.jsp</location>
    </error-page>
</web-app>