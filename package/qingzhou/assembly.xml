<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>alpha</id>
    <formats>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/frame/</directory>
            <outputDirectory/>
            <fileMode>0755</fileMode>
            <excludes>
                <exclude>**/.empty</exclude>
                <exclude>**/.gitkeep</exclude>
            </excludes>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <includes>
                <include>${project.groupId}:qingzhou-launcher</include>
            </includes>
            <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
            <useProjectArtifact>false</useProjectArtifact>
            <useProjectAttachments>false</useProjectAttachments>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <outputDirectory>/bin</outputDirectory>
        </dependencySet>

        <dependencySet>
            <includes>
                <include>${project.groupId}:qingzhou-bootstrap</include>
                <include>org.apache.felix:org.apache.felix.main</include>
            </includes>
            <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
            <useProjectArtifact>false</useProjectArtifact>
            <useProjectAttachments>false</useProjectAttachments>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <outputDirectory>lib/version/boot</outputDirectory>
        </dependencySet>

        <dependencySet>
            <includes>
                <include>${project.groupId}:qingzhou-api</include>
                <include>${project.groupId}:qingzhou-framework</include>
                <include>${project.groupId}:qingzhou-logger</include>
                <include>${project.groupId}:qingzhou-console</include>
                <include>${project.groupId}:qingzhou-serializer</include>
                <include>${project.groupId}:qingzhou-ssh</include>
                <include>${project.groupId}:qingzhou-crypto</include>
                <include>${project.groupId}:qingzhou-commons</include>
            </includes>
            <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
            <useProjectArtifact>false</useProjectArtifact>
            <useProjectAttachments>false</useProjectAttachments>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <outputDirectory>lib/version/module</outputDirectory>
        </dependencySet>

        <dependencySet>
            <includes>
                <include>${project.groupId}:console-war</include>
            </includes>
            <unpack>true</unpack>
            <useProjectArtifact>false</useProjectArtifact>
            <useProjectAttachments>false</useProjectAttachments>
            <useTransitiveDependencies>false</useTransitiveDependencies>
            <outputDirectory>lib/version/sysapp/console</outputDirectory>
            <unpackOptions>
                <excludes>
                    <exclude>META-INF/**</exclude>
                </excludes>
            </unpackOptions>
        </dependencySet>

    </dependencySets>
</assembly>
